<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>{$site->title()} | {$page->title()}</title>
  {css(['assets/css/index.css', '@auto'])|noescape}
</head>
<body>
  <div class="page">
    <header class="header">
      <a class="logo" href="{$site->url()}">{$site->title()}</a>
      <nav id="menu" class="menu">
        {foreach $site->children()->listed() as $item}
          {$item->title()->link()|noescape}
        {/foreach}
      </nav>
    </header>

    {block content}{/block}
  </div>

  <footer class="footer">
    <a href="{url()}">&copy; {date('Y')} / {$site->title()}</a>
    {if $about = page('about')}
      <nav class="social">
        <a href="{$social->url()}" n:foreach="$about->social()->toStructure() as $social">{$social->platform()}</a>
      </nav>
    {/if}
  </footer>
</body>
</html>

